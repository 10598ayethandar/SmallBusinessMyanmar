@using PagedList;
@using PagedList.Mvc;

@model IPagedList<SmallBusinessForYouth.Models.Product>

@{
    ViewBag.Title = "Index";
}


<p>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                @Html.ActionLink("Create New", "Create", FormMethod.Post, new { enctype = "multipart-data" })
                </div>
                <div class="col-sm-8">
                    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group pull-right">
                            @Html.TextBox("search", null, new { placeholder = "Search" })
                            <span class="input-group-prepend">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Image_Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Catagories)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image_Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catagories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PId })
            </td>
        </tr>
    }

</table>
<center><p>@Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = Request.QueryString["search"] }))</p></center>

